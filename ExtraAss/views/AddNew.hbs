<html>
    <head>
        <title>Add new vehicle</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <form method="post" enctype="multipart/form-data">
            
            <div class="form-group col-md-6">
              <h6><label>Vehicle Brand</label></h6>
              <input type="text" class="form-control" name="vehicle_brand" placeholder="Vehicle Brand">
            </div>

            <div class="form-group col-md-4">
              <h6><label>Vehicle category</label></h6>
              <select name="category_name" class="form-control">
                {{#each data}}
                    <option>{{this.category_name}}</option>
                {{/each}}
              </select>
            </div>

            <div class="form-group col-md-6">
              <h6><label>Vehicle Picture</label></h6>
              <input type="file" class="form-control" name="vehicle_picture">
            </div>

            <div class="form-group col-md-6">
              <h6><label>Price</label></h6>
              <input type="number" class="form-control" name="price" placeholder="Price">
            </div>

            <div class="form-group col-md-6">
              <h6><label>Depreciation</label></h6>
              <input type="number" class="form-control" name="depreciation" placeholder="Depreciation">
            </div>

            <div class="form-group col-md-6">
              <h6><label>No of years</label></h6>
              <input type="number" class="form-control" name="noOfYears" placeholder="No of years">
            </div><br/>
            <button type="submit"  class="btn btn-primary">Add Vehicle</button>
        </form>
    </body>
</html>