<html>
    <head>
        <title>Add New Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <h3>Edit Student Data</h3><hr>
        <form method="post">
            
            <input type="hidden" value="{{data._id}}" name="_id">

            <div class="form-group col-md-6">
              <label for="inputEmail4">Roll Number</label>
              <input type="number" class="form-control" name="rno" placeholder="Roll Number" value="{{data.Rollno}}">
            </div>
      
            <div class="form-group col-md-6">
              <label for="inputPassword4">Name</label>
              <input type="text" class="form-control" name="sname" placeholder="Student Name" value="{{data.Name}}">
            </div>      
      
          <div class="form-row">
      
            <div class="form-group col-md-4">
              <label for="inputState">Semester</label>
              <select name="sem" class="form-control" value="{{data.Semster}}">
                <option selected>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
              </select>
            </div>
      
            <div class="form-group col-md-4">
              <label for="inputState">Department</label>
              <select name="dept" class="form-control" value="{{data.Department}}">
                <option selected>CE</option>
                <option>IT</option>
                <option>Civil</option>
                <option>Electronics</option>
              </select>
            </div>

          <div class="form-group col-md-4">
            <label for="inputAddress">Age</label>
            <input type="text" class="form-control" name="age" placeholder="Age" value="{{data.Age}}">
          </div>

          <div class="form-group col-md-4">
            <label for="inputAddress">City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{data.City}}">
          </div>
      
          </div>
          <br>
          <button type="submit"  class="btn btn-warning">Update Student</button>
        </form>
    </body>
</html>