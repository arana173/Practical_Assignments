<html>
<head>
    <title>Home</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h5><a href="/add" class="link-primary" style="text-decoration:none">Add New Student</a></h5>
    <table class="table table-striped table-bordered" border="2">
        <thead>
          <tr>
            <th scope="col">Roll Number</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Semester</th>
            <th scope="col">Department</th>
            <th scope="col">City</th>
          </tr>
        </thead>

        <tbody>
        {{#each data}}
            <tr>
                <td>{{this.Rollno}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Semester}}</td>
                <td>{{this.Department}}</td>
                <td>{{this.Age}}</td>
                <td>{{this.City}}</td> 
                <td><h5><a href="/delete/{{this._id}}" class="link-danger">Delete</a></h5></td>
                <td><h5><a href="/update/{{this._id}}" class="link-info">Update</a></h5></td>
            </tr>
        {{/each}}
        </tbody>
      </table>
</body>
</html>